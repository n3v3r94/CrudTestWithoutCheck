@model Employee

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete @Model.Name </h2>


<form method="post">

    <div class="form-group">
        <input asp-for="Name" />
        <input asp-for="FullName" />
        <input asp-for="City" />
        <input asp-for="Age" />
        <button type="submit" class="btn btn-default"> Delete</button>
    </div>

</form>